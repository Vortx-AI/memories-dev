# memories-dev Environment Configuration
# Copy this file to .env and update with your actual values

# Security Keys
MEMORIES_MASTER_KEY=your-secure-master-key-here

# Redis Configuration
MEMORIES_REDIS_URL=redis://localhost:6379
MEMORIES_REDIS_DB=0

# Memory Storage Configuration
MEMORIES_STORAGE_PATH=./data/storage
MEMORIES_HOT_MEMORY_SIZE=1000
MEMORIES_WARM_MEMORY_SIZE=10000
MEMORIES_COLD_MEMORY_SIZE=100000

# Data Acquisition
PLANETARY_COMPUTER_API_KEY=
PROJECT_ROOT=

# GCP Configuration (for Glacier storage)
GCP_PROJECT_ID=your-gcp-project-id
GCP_BUCKET_NAME=glacier-tier
GCP_CREDENTIALS_PATH=/path/to/credentials.json

# Backend Configuration
MEMORIES_BACKEND=pytorch

# API Keys for Model Providers (optional)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
DEEPSEEK_API_KEY=
MISTRAL_API_KEY=
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=

# Geocoding Service Configuration
NOMINATIM_USER_AGENT=memories-dev-app
GEOCODING_API_KEY=

# Database Configuration
DATABASE_PATH=./data/db
DATABASE_NAME=memories.db

# Logging Configuration
LOG_LEVEL=INFO